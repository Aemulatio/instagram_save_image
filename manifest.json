{
  "name": "Скачать фотографии с Instagram",
  "description": "Позволяет скачивать фотографии с instagram.com",
  "version": "0.01",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "*://*.instagram.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["popup.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
